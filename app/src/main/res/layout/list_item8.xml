<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ibtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <www.linwg.org.lib.LCardView
        android:id="@+id/ivCard"
        android:layout_width="@dimen/x578"
        android:layout_height="@dimen/x405"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginBottom="@dimen/x48"
        android:layout_marginStart="@dimen/x24"
        app:shadowFluidShape="linear"
        app:shadowSize="@dimen/x30"
        app:shadowColor="@color/material_blue_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="@dimen/x48">
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </www.linwg.org.lib.LCardView>
    <ImageButton
        android:layout_width="@dimen/x90"
        android:layout_height="@dimen/x90"
        android:layout_marginEnd="@dimen/x66"
        android:layout_marginBottom="@dimen/x66"
        android:adjustViewBounds="true"
        android:background="@drawable/play"
        android:scaleType="centerInside"
        android:src="@drawable/button_add_pressed"
        app:layout_constraintBottom_toBottomOf="@+id/ivCard"
        app:layout_constraintEnd_toEndOf="@+id/ivCard" />
</androidx.constraintlayout.widget.ConstraintLayout>