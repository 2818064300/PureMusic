<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SquareActivity">
    <ImageButton
        android:id="@+id/Back"
        android:layout_width="@dimen/x36"
        android:layout_height="@dimen/x64"
        android:background="@drawable/back"
        android:layout_marginEnd="@dimen/x72"
        app:layout_constraintEnd_toStartOf="@+id/tv"
        app:layout_constraintTop_toTopOf="@+id/tv"
        app:layout_constraintBottom_toBottomOf="@+id/tv"/>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="歌单广场"
        android:textSize="18dp"
        android:textColor="#FF041748"
        android:layout_marginStart="@dimen/x250"
        android:layout_marginTop="@dimen/x120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RadioGroup
        android:id="@+id/RadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/x60"
        app:layout_constraintTop_toBottomOf="@+id/tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">
        <RadioButton
            android:id="@+id/RadioButton1"
            android:layout_width="@dimen/x236"
            android:layout_height="@dimen/x92"
            android:button="@null"
            android:checked="true"
            android:text="华语"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/x12"
            android:textColor="@drawable/radiobutton_tv_bg2"
            android:background="@drawable/radiobutton_bg2"/>
        <RadioButton
            android:id="@+id/RadioButton2"
            android:layout_width="@dimen/x236"
            android:layout_height="@dimen/x92"
            android:button="@null"
            android:text="欧美"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/x12"
            android:textColor="@drawable/radiobutton_tv_bg2"
            android:background="@drawable/radiobutton_bg2"/>
        <RadioButton
            android:id="@+id/RadioButton3"
            android:layout_width="@dimen/x236"
            android:layout_height="@dimen/x92"
            android:button="@null"
            android:text="流行"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@drawable/radiobutton_tv_bg2"
            android:background="@drawable/radiobutton_bg2"/>
        <RadioButton
            android:id="@+id/RadioButton4"
            android:layout_width="@dimen/x236"
            android:layout_height="@dimen/x92"
            android:button="@null"
            android:text="古风"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/x12"
            android:textColor="@drawable/radiobutton_tv_bg2"
            android:background="@drawable/radiobutton_bg2"/>
        <RadioButton
            android:id="@+id/RadioButton5"
            android:layout_width="@dimen/x236"
            android:layout_height="@dimen/x92"
            android:button="@null"
            android:text="轻音乐"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/x12"
            android:textColor="@drawable/radiobutton_tv_bg2"
            android:background="@drawable/radiobutton_bg2"/>
    </RadioGroup>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ViewPaper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/x36"
        app:layout_constraintTop_toBottomOf="@+id/RadioGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>