<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/title2"/>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textSize="18dp"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginTop="@dimen/x560"
        app:layout_constraintStart_toStartOf="@+id/account"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/account"
        android:layout_width="@dimen/x1180"
        android:layout_height="@dimen/x180"
        android:paddingStart="@dimen/x80"
        android:hint="请输入账号(目前仅支持手机号)"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/search2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        android:inputType="phone" />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textSize="18dp"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginTop="@dimen/x60"
        app:layout_constraintStart_toStartOf="@+id/account"
        app:layout_constraintTop_toBottomOf="@+id/account"/>
    <EditText
        android:id="@+id/password"
        android:inputType="textPassword"
        android:layout_width="@dimen/x1180"
        android:layout_height="@dimen/x180"
        android:hint="请输入密码"
        android:paddingStart="@dimen/x80"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/search2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"/>
    <ImageButton
        android:id="@+id/login_button"
        android:textColor="@color/black"
        android:layout_width="@dimen/x960"
        android:layout_height="@dimen/x150"
        android:layout_marginTop="@dimen/x120"
        android:background="@drawable/login_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintTop_toTopOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintBottom_toBottomOf="@+id/login_button"/>
    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有拥有一个Pure Music账户?"
        android:textSize="16dp"
        android:layout_marginBottom="@dimen/x240"
        android:layout_marginEnd="@dimen/x150"
        app:layout_constraintStart_toStartOf="@+id/login_button"
        app:layout_constraintEnd_toEndOf="@+id/login_button"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textSize="16dp"
        android:textColor="@color/blue"
        android:layout_marginBottom="@dimen/x240"
        android:layout_marginStart="@dimen/x20"
        app:layout_constraintStart_toEndOf="@+id/tv4"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>