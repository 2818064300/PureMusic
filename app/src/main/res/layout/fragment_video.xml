<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.VideoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/title2"/>
                <ImageButton
                    android:id="@+id/search_video_ibtn"
                    android:layout_width="@dimen/x388"
                    android:layout_height="@dimen/x128"
                    android:layout_marginTop="@dimen/x190"
                    android:layout_marginRight="@dimen/x120"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:background="@drawable/search_btn"
                    android:src="@drawable/button_add_pressed"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="@dimen/x40"
                    android:paddingBottom="@dimen/x40"
                    android:gravity="center">
                    <ImageButton
                        android:id="@+id/video_top_ibtn"
                        android:layout_width="@dimen/x1233"
                        android:layout_height="@dimen/x686"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:background="@drawable/btn_pressed4"
                        android:src="@drawable/button_add_pressed">
                    </ImageButton>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x16"
                        android:paddingBottom="@dimen/x60"
                        android:gravity="center">
                        <ImageButton
                            android:id="@+id/video_item1_ibtn1"
                            android:layout_width="@dimen/x586"
                            android:layout_height="@dimen/x1191"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_marginStart="@dimen/x110"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/btn_pressed6"
                            android:src="@drawable/button_add_pressed">
                        </ImageButton>
                        <ImageButton
                            android:layout_width="@dimen/x90"
                            android:layout_height="@dimen/x90"
                            android:layout_marginBottom="@dimen/x72"
                            android:layout_marginRight="@dimen/x64"
                            app:layout_constraintRight_toRightOf="@+id/video_item1_ibtn1"
                            app:layout_constraintBottom_toBottomOf="@+id/video_item1_ibtn1"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/play"
                            android:src="@drawable/button_add_pressed"/>
                        <ImageButton
                            android:id="@+id/video_item1_ibtn2"
                            android:layout_width="@dimen/x586"
                            android:layout_height="@dimen/x364"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_marginStart="@dimen/x50"
                            app:layout_constraintStart_toEndOf="@+id/video_item1_ibtn1"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/btn_pressed7"
                            android:src="@drawable/button_add_pressed">
                        </ImageButton>
                        <ImageButton
                            android:id="@+id/video_item1_ibtn3"
                            android:layout_width="@dimen/x586"
                            android:layout_height="@dimen/x1191"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_marginTop="@dimen/x220"
                            app:layout_constraintStart_toStartOf="@+id/video_item1_ibtn2"
                            app:layout_constraintEnd_toEndOf="@+id/video_item1_ibtn2"
                            app:layout_constraintTop_toBottomOf="@+id/video_item1_ibtn2"
                            android:background="@drawable/btn_pressed6"
                            android:src="@drawable/button_add_pressed">
                        </ImageButton>
                        <ImageButton
                            android:layout_width="@dimen/x90"
                            android:layout_height="@dimen/x90"
                            android:layout_marginBottom="@dimen/x72"
                            android:layout_marginRight="@dimen/x64"
                            app:layout_constraintRight_toRightOf="@+id/video_item1_ibtn3"
                            app:layout_constraintBottom_toBottomOf="@+id/video_item1_ibtn3"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/play"
                            android:src="@drawable/button_add_pressed"/>
                        <ImageButton
                            android:id="@+id/video_item1_ibtn4"
                            android:layout_width="@dimen/x586"
                            android:layout_height="@dimen/x1191"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_marginTop="@dimen/x220"
                            app:layout_constraintStart_toStartOf="@+id/video_item1_ibtn1"
                            app:layout_constraintEnd_toEndOf="@+id/video_item1_ibtn1"
                            app:layout_constraintTop_toBottomOf="@+id/video_item1_ibtn1"
                            android:background="@drawable/btn_pressed6"
                            android:src="@drawable/button_add_pressed">
                        </ImageButton>
                        <ImageButton
                            android:layout_width="@dimen/x90"
                            android:layout_height="@dimen/x90"
                            android:layout_marginBottom="@dimen/x72"
                            android:layout_marginRight="@dimen/x64"
                            app:layout_constraintRight_toRightOf="@+id/video_item1_ibtn4"
                            app:layout_constraintBottom_toBottomOf="@+id/video_item1_ibtn4"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/play"
                            android:src="@drawable/button_add_pressed"/>
                        <ImageButton
                            android:id="@+id/video_item1_ibtn5"
                            android:layout_width="@dimen/x586"
                            android:layout_height="@dimen/x1191"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:layout_marginTop="@dimen/x220"
                            app:layout_constraintStart_toStartOf="@+id/video_item1_ibtn3"
                            app:layout_constraintEnd_toEndOf="@+id/video_item1_ibtn3"
                            app:layout_constraintTop_toBottomOf="@+id/video_item1_ibtn3"
                            android:background="@drawable/btn_pressed6"
                            android:src="@drawable/button_add_pressed">
                        </ImageButton>
                        <ImageButton
                            android:layout_width="@dimen/x90"
                            android:layout_height="@dimen/x90"
                            android:layout_marginBottom="@dimen/x72"
                            android:layout_marginRight="@dimen/x64"
                            app:layout_constraintRight_toRightOf="@+id/video_item1_ibtn5"
                            app:layout_constraintBottom_toBottomOf="@+id/video_item1_ibtn5"
                            android:adjustViewBounds="true"
                            android:scaleType="centerInside"
                            android:background="@drawable/play"
                            android:src="@drawable/button_add_pressed"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
