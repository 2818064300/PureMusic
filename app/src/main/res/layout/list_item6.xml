<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ibtn"
    android:layout_width="@dimen/x1320"
    android:layout_height="wrap_content"
    android:background="@drawable/rect7"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <www.linwg.org.lib.LCardView
            android:id="@+id/cover"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x240"
            android:layout_marginStart="@dimen/x70"
            android:layout_marginTop="@dimen/x5"
            app:shadowFluidShape="linear"
            app:shadowSize="@dimen/x30"
            app:shadowColor="@color/material_blue_700"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cornerRadius="@dimen/x36">
            <ImageView
                android:id="@+id/SongsList_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </www.linwg.org.lib.LCardView>

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待定"
            android:singleLine="true"
            android:maxWidth="@dimen/x800"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/x42"
            android:layout_marginStart="@dimen/x64"
            app:layout_constraintStart_toEndOf="@+id/cover"
            app:layout_constraintTop_toTopOf="@+id/cover"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待定"
            android:textSize="12dp"
            android:singleLine="true"
            android:maxWidth="@dimen/x720"
            android:textColor="#b3b9c9"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginStart="@dimen/x64"
            app:layout_constraintStart_toEndOf="@+id/cover"
            app:layout_constraintTop_toBottomOf="@+id/tv1"/>

</androidx.constraintlayout.widget.ConstraintLayout>