<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TestActivity">
    <ImageView
        android:id="@+id/img1"
        android:layout_width="1080px"
        android:layout_height="1080px"
        android:layout_marginTop="@dimen/x120"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn1"
        android:layout_width="@dimen/x480"
        android:layout_height="@dimen/x200"
        android:layout_marginTop="@dimen/x240"
        android:text="发送异步请求"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img1"/>

    <Button
        android:id="@+id/btn2"
        android:layout_width="@dimen/x480"
        android:layout_height="@dimen/x200"
        android:layout_marginTop="@dimen/x240"
        android:text="保存cookie"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn1"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/x40"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn2">
        <RadioButton
            android:id="@+id/RadioButton_first"
            android:layout_width="@dimen/x230"
            android:layout_height="@dimen/x111"
            android:button="@null"
            android:text="播放"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/x42"
            android:textColor="@drawable/radiobutton_tv_bg"
            android:background="@drawable/radiobutton_bg"/>
        <RadioButton
            android:layout_width="@dimen/x230"
            android:layout_height="@dimen/x111"
            android:button="@null"
            android:text="收藏"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/x42"
            android:textColor="@drawable/radiobutton_tv_bg"
            android:background="@drawable/radiobutton_bg"/>
        <RadioButton
            android:layout_width="@dimen/x230"
            android:layout_height="@dimen/x111"
            android:button="@null"
            android:text="评论"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@drawable/radiobutton_tv_bg"
            android:background="@drawable/radiobutton_bg"/>
        <RadioButton
            android:layout_width="@dimen/x230"
            android:layout_height="@dimen/x111"
            android:button="@null"
            android:text="分享"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/x42"
            android:textColor="@drawable/radiobutton_tv_bg"
            android:background="@drawable/radiobutton_bg"/>
        <RadioButton
            android:layout_width="@dimen/x230"
            android:layout_height="@dimen/x111"
            android:button="@null"
            android:text="下载"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/x42"
            android:textColor="@drawable/radiobutton_tv_bg"
            android:background="@drawable/radiobutton_bg"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>